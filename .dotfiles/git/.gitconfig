[user]
  editor = code
[commit]
  template = ~/.gitmessage
[alias]
  ci = commit
  amend = commit --amend
  co = checkout
  cm = checkout main
  cb = checkout -b
  cp = cherry-pick -x
  st = status -sb
  sf = show --name-only
  lg = log --pretty=format:'%Cred%h%Creset %C(bold)%cr%Creset %Cgreen<%an>%Creset %s' --max-count=30
  rl = reflog
  incoming = !(git fetch --quiet --all && git log --pretty=format:'%C(yellow)%h %C(white)- %C(red)%an %C(white)- %C(cyan)%d%Creset %s %C(white)- %ar%Creset' ..@{u})
  outgoing = !(git fetch --quiet --all && git log --pretty=format:'%C(yellow)%h %C(white)- %C(red)%an %C(white)- %C(cyan)%d%Creset %s %C(white)- %ar%Creset' @{u}..)
  unstage = reset HEAD --
  undo = checkout --
  rollback = reset --soft HEAD~1
  po = push -u origin
  poh = push -u origin HEAD
  poof = push --force-with-lease
  whoami = !(git config user.name && git config user.email)
  save = stash push
  pop = stash pop
  apply = stash apply
  showb = rev-parse --abbrev-ref HEAD
  contributors = shortlog --summary --numbered
[commit]
  gpgsign = false
[init]
  defaultBranch = main
[include]
  path = ~/.gitconfig_local
[rerere]
  enabled = true
[column]
  ui = auto
[branch]
  sort = -committerdate
[tag]
  sort = version:refname
[push]
  default = simple
  autoSetupRemote = true
  followTags = true
[fetch]
  prune = true
  pruneTags = true
  all = true
